        <DataGrid x:Name="dgStudent" Margin="0,179,0,10" SelectionChanged="DataGrid_SelectionChanged_1">
        </DataGrid>
        <Button x:Name="ADD_Student" HorizontalAlignment="Left" Margin="45,113,0,0" VerticalAlignment="Top" Height="33" Width="126" Click="ADD_Student_Click">
            <Button Content="Button"/>
        </Button>
        <Button x:Name="R_Student" Content="Remove Student" HorizontalAlignment="Left" Margin="228,113,0,0" VerticalAlignment="Top" Height="33" Width="126" Click="R_Student_Click"/>
        <Button x:Name="ADD_Oceny" HorizontalAlignment="Left" Margin="415,113,0,0" VerticalAlignment="Top" Height="33" Width="126" Click="ADD_Oceny_Click" >
            <Button Content="ADD Grades"/>
        </Button>
        <Button x:Name="Oceny_Student" HorizontalAlignment="Left" Margin="610,113,0,0" VerticalAlignment="Top" Height="33" Width="126" Click="Oceny_Student_Click" >
            <Button Content="Grades"/>
        </Button>

    </Grid>
</Window>
